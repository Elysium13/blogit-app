

<div class="container-fluid loginContainer">
	<div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-push-1 col-md-8 col-lg-6 col-md-push-2 col-lg-push-3">
            <div class="register-container">
                <h2 class="text-center">
	                <span class="glyphicon glyphicon-user" ></span> Register
                </h2>
                <hr>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= devise_error_messages!%>
	                <div class="input-group input-group-lg inputBox">
			            <span class="input-group-addon glyphicon glyphicon-envelope"></span>
    			        <%= f.email_field :email, autofocus: true, :class=>"form-control tbox", :placeholder=>"Email", :required=>"required" %>
    		        </div>
		            <div class="input-group input-group-lg inputBox">
        			    <span class="input-group-addon glyphicon glyphicon-lock"></span>
			            <%= f.password_field :password, autocomplete: "off", :class=>"form-control tbox", :placeholder=>"Password",:required=>"required"%>
		            </div>
		            <div class="input-group input-group-lg inputBox">
        			    <span class="input-group-addon glyphicon glyphicon-lock"></span>
			            <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control tbox", :placeholder=>"Password",:required=>"required"%>
		            </div>  
		            <br>
		            <%= button_tag "<h4> Register </h4>".html_safe, :class =>"btn btn-primary buttonRegister", :type => "submit" %>
                <% end %>
                <!--<%= render "devise/shared/links" %>-->
            </div>
		</div>
	</div>
</div>

